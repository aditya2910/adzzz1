<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
	
	<bean id="keyValueCache" class="com.tecsolvent.wizspeak.notification.upstream.storage.impl.KeyValueCache"
			init-method="initIt">
			<property name="redisHost" value="localhost" />
			<property name="redisPort" value="6379" />
	</bean>
	<bean id="wizspeakUpstreamHandler" class="com.tecsolvent.wizspeak.notification.upstream.handler.impl.WizspeakUpstreamHandler">
	</bean>
	
	
	
</beans>